FROM kaiachain/circleci-rpmbuild:1.23.0-gcc11

RUN curl https://dl.google.com/go/go1.23.7.linux-amd64.tar.gz | tar xzvf - -C /usr/local
RUN yum install -y make rpm-build git createrepo python3 gcc unzip gdb which
RUN curl "https://awscli.amazonaws.com/awscli-exe-linux-x86_64.zip" -o "awscliv2.zip" && unzip -qo awscliv2.zip && ./aws/install --update && rm awscliv2.zip
ENV PATH=$PATH:/usr/local/go/bin
CMD ["/bin/sh"]